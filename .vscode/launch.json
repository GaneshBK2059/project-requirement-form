{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Core Backend",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-backend",
      "program": "${workspaceFolder}/server/ProjectRequirementAPI/bin/Debug/net8.0/ProjectRequirementAPI.dll",
      "args": [],
      "cwd": "${workspaceFolder}/server/ProjectRequirementAPI",
      "stopAtEntry": false,
      "serverReadyAction": {
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "%s",
        "action": "openExternally"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    },
    {
      "name": "Attach to Backend",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}"
    }
  ]
}
